{
  "openapi": "3.0.0",
  "info": {
    "title": "Sample REST API",
    "description": "This is a REST API for free use.",
    "contact": {
      "name": "Jhon Doe",
      "email": "example@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Local Server"
    }
  ],
  "paths": {
    "/reserve": {
      "get": {
        "description": "Get name and book to reserve",
        "parameters": [
          {
          "name": "name",
          "in": "query",
          "description": "Name of the person who is reserving",
          "required": true,
          "schema": {
            "type": "string"
          }
          },
          {
            "name": "book",
            "in": "query",
            "description": "Name of the book to reserve",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/author": {
      "get": {
        "description": "Get the author of the book",
        "parameters": [{
          "name": "book",
          "in": "query",
          "description": "Name of the book",
          "required": true,
          "schema": {
            "type": "string"
          }
        }],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "author": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
